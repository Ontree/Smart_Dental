<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_emr_row_background"
    android:descendantFocusability="blocksDescendants"
    android:gravity="right"
    android:orientation="vertical" >

 <TextView
     android:id="@+id/comment_item_author"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/comment_item_content"
     android:layout_below="@+id/comment_item_content"
     android:text="author"
     android:textColor="@color/app_grey"
     android:textSize="16sp" />

 <Button
     android:id="@+id/comment_item_delete"
     android:layout_width="50dp"
     android:layout_height="30dp"
     android:layout_alignBottom="@+id/comment_item_author"
     android:layout_alignRight="@+id/comment_item_content"
     android:layout_alignTop="@+id/comment_item_author"
     android:background="@color/app_white"
     android:text="删除"
     android:textColor="@color/app_blue"
     android:textSize="16sp" />

 <TextView
     android:id="@+id/comment_item_content"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_margin="10dp"
     android:layout_marginTop="20dp"
     android:text="content"
     android:textColor="@color/app_black"
     android:textSize="16sp" />

 <TextView
     android:id="@+id/comment_item_time"
     android:layout_width="90dp"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/comment_item_content"
     android:layout_alignBottom="@+id/comment_item_content"
     android:layout_alignParentRight="true"
     android:text="time"
     android:textColor="@color/app_grey"
     android:textSize="16sp" />
	
</RelativeLayout>
